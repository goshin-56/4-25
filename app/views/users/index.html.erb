<%= render 'info', book: @book %>
<div class="col-md-8 offset-md-1">
  <h2>Users</h2>
  <table class="table">
    <thead>
      <tr>
        <th>image</th>
        <th>name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <% if user.image.attached? %>
            <th><%= image_tag user.profile_image, size:"100x100" %></th>
          <% else %>
            <th><%= image_tag 'default-image', size:"100x100" %></th>
          <% end %>
          <th><%= user.name%></th>
          <th><%= link_to "Show", user_path(user.id) %></th>
          <th colspan="3"></th>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>